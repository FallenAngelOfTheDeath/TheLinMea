<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context="com.fallenangel.linmea.profile.fragment.FirstPageProfileFragment">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <android.support.v7.widget.CardView
                    android:id="@+id/user_info_card_view_profile"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="5dp"
                    android:background="@color/cardview_dark_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="12dp">

                        <TextView
                            android:id="@+id/user_info_title_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:text="User information"/>

                        <TextView
                            android:textColor="@color/colorBlack"
                            android:id="@+id/nick_name_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/nickname_profile"
                            android:layout_marginTop="2dp"/>

                        <TextView
                            android:id="@+id/first_name_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:text="@string/first_name_profile"
                            android:layout_marginTop="2dp"/>

                        <TextView
                            android:id="@+id/last_name_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:text="@string/last_name_profile"
                            android:layout_marginTop="2dp"/>

                        <TextView
                            android:textColor="@color/colorBlack"
                            android:id="@+id/birthday_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/birthday_profile"
                            android:layout_marginTop="2dp"/>

                        <TextView
                            android:textColor="@color/colorBlack"
                            android:id="@+id/city_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/city_profile"
                            android:layout_marginTop="2dp"/>

                        <TextView
                            android:textColor="@color/colorBlack"
                            android:id="@+id/email_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/email_profile"
                            android:layout_marginTop="2dp"/>

                        <TextView
                            android:textColor="@color/colorBlack"
                            android:id="@+id/biography_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/biography_profile"
                            android:layout_marginTop="2dp"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/user_s_dictionaries_card_view_profile"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="5dp"
                    android:background="@color/cardview_dark_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/user_info_card_view_profile">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="12dp">
                    <TextView
                        android:id="@+id/user_s_dictionaries_title_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="User's dictionaries information"/>

                    <TextView
                        android:id="@+id/dictionaries_count_profile"
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dictionaries counter: "/>

                    <TextView
                        android:id="@+id/words_counter_profile"
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="words counter: "/>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/profile_information_card_view_profile"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="5dp"
                    android:background="@color/cardview_dark_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/user_s_dictionaries_card_view_profile">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="12dp">
                        <TextView
                            android:id="@+id/date_profile_created_title_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:text="Profile information"/>

                        <TextView
                            android:id="@+id/date_profile_created_profile"
                            android:textColor="@color/colorBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date profile created"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

</FrameLayout>
