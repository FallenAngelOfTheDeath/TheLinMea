<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fallenangel.linmea.linmea.ui.dictionary.WordDetailActivity">
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/superLightGray"
        android:layout_below="@+id/include_toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="@dimen/cardview_corner_radius">
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/word_wrapper"
                                android:textColorHint="@color/colorAccent"
                                android:layout_margin="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                    <EditText
                                        android:id="@+id/word_detail_edit_text"
                                        android:textColor="@color/lightGray"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/word"
                                        android:hint="@string/word"
                                        android:textSize="18sp"/>
                            </android.support.design.widget.TextInputLayout>
                </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="@dimen/cardview_corner_radius">
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/translation_wrapper"
                                android:textColorHint="@color/colorAccent"
                                android:layout_margin="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                    <EditText
                                        android:id="@+id/translation_detail_edit_text"
                                        android:textColor="@color/lightGray"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/translation"
                                        android:hint="@string/translation"
                                        android:textSize="18sp"/>
                            </android.support.design.widget.TextInputLayout>
                    </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/description_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="@dimen/cardview_corner_radius">
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/description_wrapper"
                        android:textColorHint="@color/colorAccent"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/description_detail_edit_text"
                            android:textColor="@color/lightGray"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/description_hint"
                            android:hint="@string/description_hint"
                            android:textSize="18sp"/>
                    </android.support.design.widget.TextInputLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="@dimen/cardview_corner_radius">
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorAccent"
                            android:textSize="12sp"
                            android:text="@string/status"/>
                        <Switch
                            android:id="@+id/favorite_switcher"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/lightGray"
                            android:text="@string/favorite"
                            android:textSize="18sp"/>
                        <Switch
                            android:id="@+id/learned_switcher"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/lightGray"
                            android:text="@string/learned"
                            android:textSize="18sp"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>
        </ScrollView>
</RelativeLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:layout_gravity="right|bottom"/>
</FrameLayout>