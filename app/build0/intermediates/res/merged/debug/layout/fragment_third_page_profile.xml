<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context="com.fallenangel.linmea.profile.fragment.ThirdPageProfileFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <android.support.v7.widget.CardView
                android:id="@+id/user_info_card_view_profile"
                android:layout_margin="10dp"
                app:cardCornerRadius="5dp"
                android:background="@color/cardview_dark_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="12dp">

                    <TextView
                        android:id="@+id/privacy_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="Privacy setting"/>

                    <TextView
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="XXXXXXXXXXXXXXXXXXXXXXXXXXXX"
                        android:layout_marginTop="2dp"/>
                    <TextView
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="XXXXXXXXXXXXXXXXXXXXXXXXXXXX"
                        android:layout_marginTop="2dp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/user_s_dictionaries_card_view_profile"
                android:layout_margin="10dp"
                app:cardCornerRadius="5dp"
                android:background="@color/cardview_dark_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/user_info_card_view_profile">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="12dp">
                    <TextView
                        android:id="@+id/privacy_settings_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="Privacy setting"/>

                    <TextView
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="XXXXXXXXXXXXXXXXXXXXXXXXXXXX"
                        android:layout_marginTop="2dp"/>
                    <TextView
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="XXXXXXXXXXXXXXXXXXXXXXXXXXXX"
                        android:layout_marginTop="2dp"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>



        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</FrameLayout>
