<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_recyclerview"
    tools:context="com.fallenangel.linmea._linmea.ui.testing.tests.TestResultActivity">

    <include
        android:id="@+id/tb"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
        <FrameLayout
            android:id="@+id/container"
            android:layout_below="@id/tb"
            android:layout_above="@id/close_test_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_below="@id/tb"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tb">
                    <TextView
                        android:id="@+id/result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp" />
                </ScrollView>
            </android.support.v7.widget.CardView>
        </FrameLayout>
    <Button
        android:id="@+id/close_test_result"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:text="@string/close"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />


</RelativeLayout>
