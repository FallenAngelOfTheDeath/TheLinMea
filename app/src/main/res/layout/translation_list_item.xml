<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/extended_list_item_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/cardview_main_padding"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/extended_list_item_status_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_school"
            android:layout_weight="0"/>

        <TextView
            android:id="@+id/extended_list_item_translation_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/translation"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="@dimen/default_text_size"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/extended_list_item_handle"
            android:layout_width="?listPreferredItemHeight"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="center"
            android:src="@drawable/ic_reorder"
            android:layout_weight="0"/>

        <ImageView
            android:id="@+id/extended_list_item_options_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="&#8942;"
            android:textAppearance="?android:textAppearanceLarge"
            android:src="@drawable/ic_more"
            android:layout_weight="0"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>