<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background_recyclerview">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_tr"
        android:elevation="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/source_text"
                    android:padding="10dp"
                    android:textColor="@color/colorBlack"
                    android:text="source text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:id="@+id/line"
                    android:layout_below="@+id/source_text"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/bottomSheetLine" />

                <TextView
                    android:id="@+id/translated_text"
                    android:textColor="@color/colorBlack"
                    android:padding="10dp"
                    android:layout_below="@+id/line"
                    android:text="translated text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_weight="0"
                    android:padding="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_delete_forever_black"/>
            </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>