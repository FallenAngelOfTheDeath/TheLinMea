<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<include
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    layout="@layout/toolbar"/>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout
                    android:textColorHint="@color/colorAccent"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/user_name"
                        android:inputType="textPersonName"
                        android:textColor="@color/lightGray"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/user_name_hint"
                        android:hint="@string/user_name_hint"
                        android:textSize="18sp"/>
                </android.support.design.widget.TextInputLayout>
                <ImageView
                    android:id="@+id/edit_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_edit_black"
                    android:padding="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout
                    android:textColorHint="@color/colorAccent"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/email"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/lightGray"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/email_hint"
                        android:hint="@string/email_hint"
                        android:textSize="18sp"/>
                </android.support.design.widget.TextInputLayout>
                <ImageView
                    android:id="@+id/edit_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_edit_black"
                    android:padding="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout
                    android:textColorHint="@color/colorAccent"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/email_verification"
                        android:inputType="text"
                        android:textColor="@color/lightGray"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/email_verification"
                        android:hint="@string/email_verification"
                        android:textSize="18sp"/>
                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout
                    android:textColorHint="@color/colorAccent"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/password"
                        android:inputType="textPassword"
                        android:textColor="@color/lightGray"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/password_hint"
                        android:hint="@string/password_hint"
                        android:textSize="18sp"/>
                </android.support.design.widget.TextInputLayout>
                <ImageView
                    android:id="@+id/edit_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_edit_black"
                    android:padding="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout
                    android:textColorHint="@color/colorAccent"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/uid"
                        android:inputType="text"
                        android:textColor="@color/lightGray"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/uid_hint"
                        android:hint="@string/uid_hint"
                        android:textSize="18sp"
                        tools:ignore="DuplicateIds" />
                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/log_out"
                    android:text="@string/log_out"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/wallet_highlighted_text_holo_dark"
                    android:layout_margin="10dp"
                    android:layout_weight="0.5"/>
                <Button
                    android:id="@+id/delete_account"
                    android:text="@string/delete_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/wallet_highlighted_text_holo_dark"
                    android:layout_margin="10dp"
                    android:layout_weight="0.5"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>