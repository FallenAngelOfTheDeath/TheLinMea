<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/extended_list_item_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:elevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/cardview_main_padding"
        android:layout_weight="0.1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/extended_list_item_status_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:src="@drawable/ic_school"/>

            <TextView
                android:id="@+id/extended_list_item_word_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/extended_list_item_status_image_view"
                android:text="@string/newWord"
                android:textAppearance="?android:textAppearanceLarge"
                android:textSize="@dimen/default_text_size"/>

        </RelativeLayout>
        <TextView
            android:id="@+id/extended_list_item_translation_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/translation"
            android:textAppearance="?android:textAppearanceMedium"/>

    </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9">

            <ImageView
                android:id="@+id/extended_list_item_options_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/cardview_options_margin"
                android:layout_marginTop="@dimen/cardview_options_margin"
                android:text="&#8942;"
                android:textAppearance="?android:textAppearanceLarge"
                android:src="@drawable/ic_more"/>
            <ImageView
                android:id="@+id/extended_list_item_handle"
                android:layout_width="?listPreferredItemHeight"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/extended_list_item_options_menu"
                android:src="@drawable/ic_reorder" />
        </RelativeLayout>


    </LinearLayout>

    </android.support.v7.widget.CardView>
